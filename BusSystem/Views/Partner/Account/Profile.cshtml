@model BusSystem.Entity.IdentityAccess.User
@{
    ViewData["Title"] = "Profile";
    Layout = "~/Views/Partner/Shared/_Layout.cshtml";
}
<section class="inner-banner bg_img" style="background: url(https://script.viserlab.com/viserbus/assets/images/frontend/breadcrumb/61f14e10b48871643204112.jpg) center">
    <div class="container">
        <div class="inner-banner-content">
            <h2 class="title">Profile </h2>
        </div>
    </div>
</section>
<div class="padding-top padding-bottom">
    <div class="container">
        <div class="profile__edit__wrapper">
            <div class="profile__edit__form">
                <form class="register prevent-double-click" action="" method="post" enctype="multipart/form-data">
                    <div class="row justify-content-center">
                        <div class="col-xl-10">
                            <div class="profile__content__edit p-0">
                                <h5 class="title">Profile Info</h5>
                                <div class="row gy-3 p-4">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="InputFirstname" class="form-label">FullName</label>
                                            <input type="text" class="form-contorl form--control radius-0" id="InputFirstname" disabled asp-for="FullName" placeholder="Full Name">
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="email" class="form-label">E-mail Address</label>
                                            <input class="form-contorl form--control radius-0" id="Email" value="@Model.Email" disabled="">
                                        </div>
                                    </div>

                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="phone" class="form-label">Mobile Number</label>
                                            <input class="form-contorl form--control radius-0" id="phone" value="@Model.PhoneNumber" disabled="">
                                        </div>
                                    </div>

                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="address" class="form-label">Address</label>
                                            <input type="text" class="form-contorl form--control radius-0" id="address" asp-for="Address"disabled  placeholder="Address" value="@Model.Address" required="">
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
